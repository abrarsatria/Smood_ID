# Apps server integration (gateway)
# URL base untuk Apps API (contoh: http://localhost:8000 atau http://apps:8000)
APPS_API_URL=http://localhost:8000
# Kredensial service account untuk login ke Apps (disarankan role admin dengan panels '*')
APPS_SERVICE_USERNAME=service_account_username
APPS_SERVICE_PASSWORD=service_account_password
PORT=5055
ALLOWED_ORIGINS=http://localhost:3001

DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=smood_website_backend_dev

JWT_SECRET=change-this-in-local-dev

# Comma separated admin emails (contoh: admin@studio.com,owner@studio.com)
ADMIN_EMAILS=admin@smood.id

# Payment instructions (optional)
BANK_NAME=BANK BCA
BANK_ACCOUNT_NAME=PT SMOOD STUDIO
BANK_ACCOUNT_NUMBER=1234567890
# Optional QR image/link
PAYMENT_QR_URL=
# Custom instruction text
PAYMENT_INSTRUCTIONS=Lakukan transfer sesuai nominal invoice. Setelah transfer, kirim bukti pembayaran via form pada detail invoice.

# Provisioning (multi-tenant Apps)
# Image Docker untuk Apps
APPS_IMAGE=smood-management:1.55
# Domain induk (untuk dev bisa localhost)
BASE_DOMAIN=localhost
# URL publik backend (digunakan Apps saat call-back)
WEBSITE_PUBLIC_URL=http://localhost:5055
# Driver provisioning: docker (default) | k8s (opsional jika diaktifkan)
PROVISIONER_DRIVER=docker

# Postgres admin (untuk membuat DB per-tenant)
PG_ADMIN_HOST=127.0.0.1
PG_ADMIN_PORT=5432
PG_ADMIN_USER=admin
PG_ADMIN_PASSWORD=mbadmin

# Kredensial DB tenant (opsional; fallback ke admin di atas)
TENANT_DB_HOST=127.0.0.1
TENANT_DB_PORT=5432
TENANT_DB_USER=admin
TENANT_DB_PASSWORD=mbadmin

# Konfigurasi Docker optional
APPS_BASE_HOST=localhost
DOCKER_NETWORK=
